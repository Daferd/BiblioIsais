<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.lecturaHuerta.AgregarTemaFragment">

    <LinearLayout
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:id="@+id/profile_photo"
            tools:background="@mipmap/ic_launcher_round" />

        <TextView
            android:layout_marginStart="8dp"
            android:id="@+id/profile_userName"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="name user"
            android:layout_height="wrap_content"/>


        <TextView
            android:text="Hace dos horas"
            android:id="@+id/post_time_agregarTema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="Agregar Nuevo Tema"
                android:textColor="#010A3E"
                android:textSize="24sp"
                android:textStyle="normal|bold" />


            <ImageView
                android:id="@+id/imgVw_photoPost"
                android:layout_marginTop="18dp"
                android:layout_gravity="center"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/orange" />

            <Button
                android:layout_marginTop="10dp"
                android:text="Take photo"
                android:id="@+id/btnTakePhotoNewPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_marginTop="10dp"
                android:text="Upload photo"
                android:id="@+id/btnUploadPhotoNewPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <EditText
                android:id="@+id/editTextAutor"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="autor"
                android:ems="10"
                android:elegantTextHeight="true"
                android:background="@color/orange_ligth_edtxt"
                android:inputType="textPersonName"/>
            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/editTextTitulo"
                android:hint="titulo"
                android:padding="10dp"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:elegantTextHeight="true"
                android:background="@color/orange_ligth_edtxt"
                android:inputType="textCapWords"/>


            <EditText
                android:id="@+id/editTextContenido"
                android:layout_width="300dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@color/orange_ligth_edtxt"
                android:elegantTextHeight="true"
                android:ems="10"
                android:gravity="left|top"
                android:hint="Contenido"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbars="vertical" />

            <Button
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:id="@+id/editTextBTN"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:text="Publicar" />


        </LinearLayout>




    </androidx.core.widget.NestedScrollView>



</LinearLayout>