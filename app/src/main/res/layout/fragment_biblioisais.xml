<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.biblioisais.BiblioisaisFragment"
    android:padding="8dp"
    android:background="@drawable/fondotexturanaranja">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/curso1textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dialogos sobre derecho prÃ³pio"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            android:textColor="@color/blu_700"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cursos1_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="275dp"
            tools:layout_editor_absoluteX="8dp"
            tools:listitem="@layout/cursos_item"
            android:orientation="horizontal"/>

        <TextView
            android:id="@+id/curso2textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Curso 2"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            android:textColor="@color/blu_700"
            android:layout_marginTop="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cursos2_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="275dp"
            tools:layout_editor_absoluteX="8dp"
            tools:listitem="@layout/cursos_item"
            android:orientation="horizontal"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>