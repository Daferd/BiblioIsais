<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_grey_100"
    android:orientation="vertical"
    tools:context=".ui.main.therapy.TherapyFragment">

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/psychologyCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/psicologia"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/psychology"
                        android:textColor="@color/black"
                        android:textSize="32sp" />

                    <kr.co.prnd.readmore.ReadMoreTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:justificationMode="inter_word"
                        android:padding="4dp"
                        android:text="@string/psychology_information"
                        android:textColor="@color/md_grey_700"
                        android:textSize="16sp"
                        app:readMoreColor="@color/md_blue_300"
                        app:readMoreMaxLine="4"
                        app:readMoreText="@string/more" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/spiritualCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/espiritual"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/spiritual_therapy"
                        android:textColor="@color/black"
                        android:textSize="32sp" />

                    <kr.co.prnd.readmore.ReadMoreTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:justificationMode="inter_word"
                        android:padding="4dp"
                        android:text="@string/spiritual_information"
                        android:textColor="@color/md_grey_700"
                        android:textSize="16sp"
                        app:readMoreColor="@color/md_blue_300"
                        app:readMoreMaxLine="4"
                        app:readMoreText="@string/more" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/medicineCardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/medicina"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/medicine"
                        android:textColor="@color/black"
                        android:textSize="32sp" />

                    <kr.co.prnd.readmore.ReadMoreTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:justificationMode="inter_word"
                        android:padding="4dp"
                        android:text="@string/medicine_information"
                        android:textColor="@color/md_grey_700"
                        android:textSize="16sp"
                        app:readMoreColor="@color/md_blue_300"
                        app:readMoreMaxLine="4"
                        app:readMoreText="@string/more" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/businessCardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/negocios"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/business_plans"
                        android:textColor="@color/black"
                        android:textSize="32sp" />

                    <kr.co.prnd.readmore.ReadMoreTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:justificationMode="inter_word"
                        android:padding="4dp"
                        android:text="@string/business_information"
                        android:textColor="@color/md_grey_700"
                        android:textSize="16sp"
                        app:readMoreColor="@color/md_blue_300"
                        app:readMoreMaxLine="4"
                        app:readMoreText="@string/more" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>





    </ScrollView>


</LinearLayout>