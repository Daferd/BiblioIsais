<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/blue_alert_dialog"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/add_photo"
        android:textColor="@color/md_blue_500"
        android:textSize="35sp"
        android:textStyle="normal|bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DEDEDE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ImgVw_CancelCustomAlertDialog"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_cancel_24"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/ImgVw_UploadCustomAlertDialog"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_cloud_upload_24"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/ImgVw_TakePhotoCustomAlertDialog"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_linked_camera_24"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</LinearLayout>